package ThirdProject;
import java.util.Scanner;

public class ChangeDenomination {
	
	public static void main(String[] args) {
		//declare constant
		final int QUARTER = 25;
		final int DIME = 10;
		final int NICKEL = 5;
		final int PENNY = 1;
		
		//declaration of variables
		int amount = 0, originalAmount;
		int Quarter = 0, Dime = 0,Nickel = 0,Penny = 0;
		
	
		Scanner keyInput = new Scanner(System.in);
		
		System.out.println("Enter amount (from 1-99 cents) :");
		String s1 = keyInput.nextLine();
		originalAmount = Integer.parseInt(s1);
		if (originalAmount > 0 && originalAmount < 100) {
			  System.out.println("It is from 1-99 cents");
				  Quarter = originalAmount %25;
				  originalAmount = originalAmount - (originalAmount/QUARTER)*Quarter;
				  Dime = originalAmount %DIME;
				  originalAmount = originalAmount - (originalAmount/DIME)*Dime;
				  Nickel = originalAmount %NICKEL;
				  originalAmount = originalAmount - (originalAmount/NICKEL)*Nickel;
				  Nickel = originalAmount %PENNY;
				  originalAmount = originalAmount - (originalAmount/PENNY)*Penny;
			 System.out.println("The number of QUARTERS is: " + Quarter);
			 System.out.println("The number of DIME is: " + Dime);
			 System.out.println("The number of NICKEL is: " + Nickel);
			 System.out.println("The number of PENNY is: " + Penny);
			}
		else {
			System.out.println("Wrong Input!");
		}
	}
}
